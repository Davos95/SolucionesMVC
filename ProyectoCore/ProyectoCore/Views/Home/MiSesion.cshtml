
@{
    ViewData["Title"] = "MiSesion";
}

<h2>MiSesion</h2>

@section styles {
    <link href="~/css/jquery.countdown.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/js/jquery.countdown.js"></script>
    <script>
        $(document).ready(function () {

            $("#tiempo").countdown({
                "seconds": 30,
                "warning-time": 5,
                "normal-class": "countdown-normal",
                "warning-class": "countdown-warning",
                "stop-class": "countdown-stop"
            });

        });
    </script>
}

<h2 style="color:blue">@ViewData["MENSAJE"]</h2>
<a asp-controller="Home" asp-action="MiSesion" asp-route-accion="guardar">Almacenar sesion</a>
<a asp-controller="Home" asp-action="MiSesion" asp-route-accion="mostrar">Mostrar sesion</a>
<div id="tiempo">

</div>

<hr />
<h2 style="color:red">
    Nombre: @ViewData["NOMBRE"], Edad: @ViewData["EDAD"]
</h2>