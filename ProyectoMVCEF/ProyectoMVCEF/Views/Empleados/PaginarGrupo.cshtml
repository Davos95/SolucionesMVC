@using ProyectoMVCEF.Models

@model  List<PAGINACIONEMPLEADOSAGRUPADOS_Result>

@{
    ViewBag.Title = "PaginarGrupo";
    int numeroPaginacion = 1;
}

<h2>PaginarGrupo</h2>

<table class="table table-bordered">
    <tr>
        <th>APELLIDO</th>
        <th>SALARIO</th>
        <th>OFICIO</th>
    </tr>
    @foreach (PAGINACIONEMPLEADOSAGRUPADOS_Result emp in Model)
    {
        <tr>
            <td>@emp.APELLIDO</td>
            <td>@emp.SALARIO</td>
            <td>@emp.OFICIO</td>
        </tr>
    }
    <tr>
        <td colspan="3">
            @for (int i = 0; i < ViewBag.TotalRegistros; i+=3)
            {
                @Html.ActionLink(numeroPaginacion.ToString(), "PaginarGrupo", "Empleados", new { posicion = numeroPaginacion},null);
                numeroPaginacion += 1;
            }
        </td>
    </tr>
    
</table>