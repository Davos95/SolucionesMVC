
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@Html.ActionLink("Registrar", "RegistrarUsuarios", "CifradoBBDD");
<form method="post">
    <div>
        <label>Usuario: </label>
        <input type="text" name="username" />
    </div>
    <div>
        <label>Password: </label>
        <input type="text" name="password" />
    </div>
    <div>
        <button type="submit">Comprobar</button>
    </div>
</form>

<h1>@ViewBag.Mensaje</h1>